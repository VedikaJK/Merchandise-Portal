<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/selection_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/select_category_of_the_item_to_be_sold"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/men"
            android:layout_width="198dp"
            android:layout_height="297dp"
            android:contentDescription="@string/men_s_wear"
            android:src="@drawable/men"
            android:onClick="clickCategory"/>

        <ImageButton
            android:id="@+id/women"
            android:layout_width="198dp"
            android:layout_height="297dp"
            android:contentDescription="@string/men_s_wear"
            android:src="@drawable/women"
            android:onClick="clickCategory"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/children"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/men_s_wear"
        android:src="@drawable/children2"
        android:onClick="clickCategory"/>


    <ImageView
        android:id="@+id/back_button"

        android:src="@drawable/ic_arrow_back_black"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="Back Icon"
        android:onClick="back_to_merchant_page" />

</LinearLayout>



















